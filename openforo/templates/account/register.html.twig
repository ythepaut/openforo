{% extends 'base.html.twig' %}

{% block title %}
    OpenForo - Inscription
{% endblock %}

{% block body %}

    <h1>Création d'un compte</h1>

    {{ form_start(form) }}

    {{ form_row(form.username, {'attr' : {'placeholder' : "Nom d'utilisateur"}}) }}

    {{ form_row(form.email, {'attr' : {'placeholder' : 'E-mail'}}) }}

    {{ form_row(form.passwd, {'attr' : {'placeholder' : 'Mot de passe'}}) }}

    {{ form_row(form.confirm_passwd, {'attr' : {'placeholder' : 'Mot de passe (confirmation)'}}) }}

    <button type="submit" class="btn btn-primary">Créer un compte</button>

    {{ form_end(form) }}

{% endblock %}
