{% extends 'base.html.twig' %}

{% block title %}
    OpenForo - Connexion
{% endblock %}

{% block body %}

    <h1>Connexion</h1>

    <form name="connection" method="post" action="{{ path('login') }}">

        <div class="form-group">
            <label for="connection_email" class="required">Email</label>
            <input type="email" id="connection_email" name="_username" required="required" placeholder="E-mail" class="form-control">
        </div>

        <div class="form-group">
            <label for="connection_passwd" class="required">Passwd</label>
            <input type="password" id="connection_passwd" name="_password" required="required" placeholder="Mot de passe" class="form-control">
        </div>

        <button type="submit" class="btn btn-primary">Connexion</button>

    </form>


{% endblock %}
